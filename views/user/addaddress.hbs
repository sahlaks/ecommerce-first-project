        <h1>Add a new address</h1>
  <form action="/addaddress" method="post">       
  <div class="form-row">
    <div class="form-group col-md-6">
      
      <label for="" class="size">First name</label><br>
      <input type="text" class="form-control form-control-lg" id="fname" placeholder="First name*" name="fname" value="{{body.fname}}">
      {{#if err.fname.path}} <span class="text-danger">{{err.fname.msg}}</span> {{/if}}
    </div>
    <div class="form-group col-md-6">
      <label for="" class="size">Second name</label><br>
      <input type="text" class="form-control form-control-lg" id="sname" placeholder="Second name*" name="sname" value="{{body.sname}}">
      {{#if err.sname.path}} <span class="text-danger">{{err.sname.msg}}</span> {{/if}}
    </div>
  </div>
  <br>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="" class="size">Pincode</label><br>
      <input type="number" class="form-control form-control-lg" id="pincode" placeholder="Pincode*" name="pincode" value="{{body.pincode}}">
      {{#if err.pincode.path}} <span class="text-danger">{{err.pincode.msg}}</span> {{/if}}
    </div>
    <div class="form-group col-md-6">
      <label for="" class="size">Locality</label><br>
      <input type="text" class="form-control form-control-lg" id="locality" placeholder="Locality*" name="locality" value="{{body.locality}}">
      {{#if err.locality.path}} <span class="text-danger">{{err.locality.msg}}</span> {{/if}}
    </div>
  </div>
  <br>
  <div class="form-group">
    <label for="" class="size">Address</label><br>
    <textarea class="form-control size form-control-lg" id="address" rows="3"  placeholder="Address (Area and Street)*" name="address">{{body.address}}</textarea> 
    {{#if err.address.path}} <span class="text-danger">{{err.address.msg}}</span> {{/if}}
  </div>
  <br>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="" class="size">District</label><br>
      <input type="text" class="form-control form-control-lg" id="district" placeholder="City/District/Town*" name="district" value="{{body.district}}">
      {{#if err.district.path}} <span class="text-danger">{{err.district.msg}}</span> {{/if}}
    </div>
    <div class="form-group col-md-6">
      <label for="" class="size">State</label><br>
      <input type="text" class="form-control form-control-lg" id="state" placeholder="State*" name="state" value="{{body.state}}">
      {{#if err.state.path}} <span class="text-danger">{{err.state.msg}}</span> {{/if}}
    </div>
  </div>
  <br>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="" class="size">Landmark</label><br>
      <input type="text" class="form-control form-control-lg" id="landmark" placeholder="Landmark(Optional)" name="landmark" value{{body.landmark}}>
      {{#if err.landmark.path}} <span class="text-danger">{{err.landmark.msg}}</span> {{/if}}
    </div>
    <div class="form-group col-md-6">
      <label for="" class="size">Alternate Phone</label><br>
      <input type="Number" class="form-control form-control-lg" id="alternate" placeholder="Alternate Phone(Optional)" name="phone" value="{{body.phone}}">
    </div>
  </div>
  <br>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="" class="size">Email</label><br>
      <input type="email" class="form-control form-control-lg" id="email" name="email" value="{{user1.email}}">
      {{#if err.email.path}} <span class="text-danger">{{err.email.msg}}</span> {{/if}}
    </div>
    <div class="form-group col-md-6">
      <label for="" class="size">mobilenumber</label><br>
      <input type="Number" class="form-control form-control-lg" id="mobilenumber" placeholder="10-digit mobile number*" name="mobilenumber" value="{{body.mobilenumber}}">
      {{#if err.mobilenumber.path}} <span class="text-danger">{{err.mobilenumber.msg}}</span> {{/if}}
    </div>
  </div>
  
  <div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="type"  value="home">
  <label class="form-check-label" for="inlineRadio1">Home</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="type"  value="work">
  <label class="form-check-label" for="inlineRadio2">Work</label>
</div>
{{#if err.type.path}} <span class="text-danger">{{err.type.msg}}</span> {{/if}}
<br><br>

  <button type="submit" class="btn btn-primary">Save</button><span> <a href="/address" style="color: blue; font-size:1.7rem;font-weight: bold; margin-left:20px">Cancel</a></span>
</form>
        
