<style>
.btn::before{
    background-color:#FBD2E0;
}

.pagination {
    display: flex;
    list-style: none;
    padding: 0;
}

.pagination a,
.pagination .current-page {
    display: inline-block;
    padding: 8px 12px;
    margin: 0 4px;
    text-decoration: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    color: #333;
}

.pagination .current-page {
    background-color: #007bff;
    color: #fff;
    border: 1px solid #007bff;
}

.page-numbers-below {
    margin-top: 10px;
}

.page-numbers-below a {
    margin-right: 10px;
    text-decoration: none;
    color: #007bff;
}


</style>

<div class="popular-items section-padding20">
  <div class="container">
    <!-- Section tittle -->
    <div class="row justify-content-center">
      <div class="col-xl-7 col-lg-8 col-md-10">
        <div class="section-tittle mb-70 text-center">

          <h2>Products</h2>
          <p>We believe in empowering individuals to express their unique style
            through meticulously crafted accessories that transcend time and
            make a lasting statement</p>
        </div>
      </div>
    </div>
    <div class="row">

      <div class="col-xl-3" style="border-right: 1px solid grey;">
        <div class="filter">
          <p style="font-size: 2rem;;">CATEGORIES</p>
          <form>
            
             <label>
                {{#each category}}
                   <div> <p><input type="radio" name="color" value="red" >{{category}} </p></div>
                {{/each}}
            </label>
        
        </form>
        </div>
      </div>
      <div class="col-xl-9">
        <div class="row">
          <div class="col-xl-12">
            <div class="search">
              <div class="form-group col-xs-9" style="display: flex; flex-direction:row;"> 
                <form>
                <input  type="text" placeholder="Search" name="search" style="font-size:2rem;" />
                <button type="submit" class="btn" value="search" style="">Search</button>
                </form>
             </div>
               <div class="form-group col-xs-3">  
               
              </div>
            </div>
          </div>
        </div>

        <div class="row">

          {{#each products}}

            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
              <div class="single-popular-items mb-50 text-center">
                <div class="popular-img">
                  <a href="/productdetails/{{this._id}}"><img
                      src="/images/{{this.image}}"
                      alt="product image"
                      style="max-width: 80%;object-fit:contain;"
                    /></a>
                  <div class="img-cap">
                    <a href="/addcart/{{this._id}}"> <span>Add to cart</span></a>
                  </div>
                  <div class="favorit-items">
                    <a href="/wishlist/{{this._id}}"><span class="flaticon-heart"></span></a>
                  </div>
                </div>
                <div class="popular-caption">
                  <h3><a
                      href="/productdetails/{{this._id}}"
                    >{{this.productname}}</a></h3>
                  <span>{{this.price}}</span>
                </div>
              </div>
            </div>
          {{/each}}

        </div>

      {{#if totalPages}}
    <div class="pagination">
        {{#each pages}}
            {{#if this.isCurrent}}
                <span class="current-page">{{this.pageNumber}}</span>
            {{else}}
                <a href="?page={{this.pageNumber}}">{{this.pageNumber}}</a>
            {{/if}}
        {{/each}}
    </div>
    {{/if}}

    
      </div>
    </div>
  </div>
</div>

